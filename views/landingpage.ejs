    <section class="two" style="padding-bottom:25em;">
        <h2 class="header">Our Services</h2>
        <div class="swiper">
            <div class="swiper-wrapper">
                <div class=" swiper-slide">
                    <div class="card">
                        <i class="material-icons icon">phone_iphone</i>
                        <h3 class="card-title">Airtime</h3>
                        <p>
                            Top-up your mobile airtime instantly.
                        </p>
                    </div>

                    <div class="card">
                        <i class="material-icons icon">wifi</i>
                        <h3 class="card-title">Data</h3>
                        <p>
                            Purchase data plans at competitive rates.
                        </p>
                    </div>
                </div>

                <div class=" swiper-slide">
                    <div class="card">
                        <i class="material-icons icon">tv</i>
                        <h3 class="card-title">Cable Subscription</h3>
                        <p>
                            Renew your cable TV subscription hassle-free.
                        </p>
                    </div>

                    <div class="card">
                        <i class="material-icons icon">power</i>
                        <h3 class="card-title">Electricity</h3>
                        <p>
                            Pay electricity bills conveniently.
                        </p>
